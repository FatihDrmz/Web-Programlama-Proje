@model IEnumerable<WebProje.Models.Model.Kategori>
@{
    ViewData["Title"] = "Admin Anasayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Admin Paneli</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/AdminLayout/index.html">Anasayfa</a></li>
                <li class="breadcrumb-item active">Panel</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section dashboard">

        <div class="row">

            <!-- Left side columns -->
            <div class="col-lg-8">
                <div class="row">
                   
                    <div class="col-12">
                        <div class="card recent-sales">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>İşlem</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="/Kategori/Edit/1/">Güncelle</a></li>
                                    <li><a class="dropdown-item" href="/Kategori/Details/1/">Detay</a></li>
                                    <li><a class="dropdown-item" href="/Kategori/Delete/1/">Sil</a></li>
                                </ul>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title">Kategori <span>| Detay</span></h5>

                                <table class="table table-borderless datatable">
                                    <thead>
                                        <tr>
                                            <th scope="col">Kategori Id</th>
                                            <th scope="col">Kategori</th>
                                            <th scope="col">Açıklama</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <th scope="row"><a href="#">#@item.KategoriId</a></th>
                                                <td>@item.KategoriAd</td>
                                                <td class="text-primary">@item.Aciklama</td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div><!-- End Recent Sales -->
                    
                    <div class="col-12">
                        <div class="card top-selling">

                            <div class="filter">
                                <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                    <li class="dropdown-header text-start">
                                        <h6>İşlem</h6>
                                    </li>

                                    <li><a class="dropdown-item" href="/Slider/Edit/1/">Güncelle</a></li>
                                    <li><a class="dropdown-item" href="/Slider/Details/1/">Detay</a></li>
                                    <li><a class="dropdown-item" href="/Slider/Delete/1/">Sil</a></li>
                                </ul>
                            </div>

                            <div class="card-body pb-0">
                                <h5 class="card-title">Slider <span>| Detay</span></h5>

                                <table class="table table-borderless">
                                    <thead>
                                        <tr>
                                            <th scope="col">Ön İzleme</th>
                                            <th scope="col">Slider</th>
                                            <th scope="col">Açıklama</th>
                                        </tr>
                                    </thead>
                                    <tbody>


                                        <tr>
                                            <th scope="row"><a href="#"><img src="/AdminLayout/assets/img/slides-1.jpg" alt=""></a></th>
                                            <td><a href="#" class="text-primary fw-bold">Özellik 1</a></td>
                                            <td>Web sitesinin alan adı içerik</td>
                                        </tr>
                                        <tr>
                                            <th scope="row"><a href="#"><img src="/AdminLayout/assets/img/slides-2.jpg" alt=""></a></th>
                                            <td><a href="#" class="text-primary fw-bold">Özellik 2</a></td>
                                            <td>Menüler, ziyaretçilerin aradıkları</td>

                                        </tr>
                                        <tr>
                                            <th scope="row"><a href="#"><img src="/AdminLayout/assets/img/slides-3.jpg" alt=""></a></th>
                                            <td><a href="#" class="text-primary fw-bold">Özellik 3</a></td>
                                            <td>Logo ile grafik, yazı</td>

                                        </tr>
                                        <tr>
                                            <th scope="row"><a href="#"><img src="/AdminLayout/assets/img/card.jpg" alt=""></a></th>
                                            <td><a href="#" class="text-primary fw-bold">Özellik 4</a></td>
                                            <td>Web sitesi tüm tarayıcılarda</td>

                                        </tr>
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div><!-- End Top Selling -->

                    <div class="card">

                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>İşlem</h6>
                                </li>

                                <li><a class="dropdown-item" href="/Blog/Index/">Blog sayfası</a></li>
                            </ul>
                        </div>

                        <div class="card-body pb-0">
                            <h5 class="card-title">Güncel &amp; Bloglar <span>| Detay</span></h5>

                            <div class="news">
                                <div class="post-item clearfix">
