@model IEnumerable<WebProje.Models.Model.Iletisim>

@{
    ViewData["Title"] = "Iletisim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>İletişim</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Anasayfa</a></li>
                <li class="breadcrumb-item">Sayfalar</li>
                <li class="breadcrumb-item active">İletişim</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section contact">

        <div class="row gy-4">

            <div class="col-xl-6">

                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-6">
                            <div class="info-box card">
                                <i class="bi bi-geo-alt"></i>
                                <h3>Adress</h3>
                                <p>@item.Adres</p>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="info-box card">
                                <i class="bi bi-envelope"></i>
                                <h3>Sosyal Medya</h3>
                                <b class="bi bi-twitter">@item.Twitter</b>
                                <b class="bi bi-facebook">@item.Facebook</b>
                                <b class="bi bi-instagram">@item.Instagram</b>
                                <b class="bi bi-whatsapp">@item.Whatsapp</b>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="info-box card">
                                <i class="bi bi-telephone"></i>
                                <h3>Telefon</h3>
                                <p>@item.Telefon</p>
                            </div>
                        </div>

                     }
                </div>

            </div>

            <div class="col-xl-6">
                <div class="card p-4">
                    <form action="" method="post" class="php-email-form">
                        <div class="row gy-4">

                            <div class="col-md-6">
                                <input type="text" name="name" class="form-control" placeholder="Adınız" required>
                            </div>

                            <div class="col-md-6 ">
                                <input type="email" class="form-control" name="email" placeholder="E-mailiniz" required>
                            </div>

                            <div class="col-md-12">
                                <input type="text" class="form-control" name="subject" placeholder="Konu" required>
                            </div>

                            <div class="col-md-12">
                                <textarea class="form-control" name="message" rows="6" placeholder="Mesaj" required></textarea>
                            </div>

                            <div class="col-md-12 text-center">
                                <div class="loading">Yükleniyor</div>
                                <div class="error-message"></div>
                                <div class="sent-message">Mesajınız gönderildi. Teşekkürler!</div>

                                <button type="submit">Gönder</button>
                            </div>

                        </div>
                    </form>
                </div>

            </div>

        </div>

    </section>

</main>
