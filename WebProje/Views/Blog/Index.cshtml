@model IEnumerable<WebProje.Models.Model.Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main" class="main">
    <h2>Blog Kayıtları</h2>
    <hr />
    <a asp-action="Create" class="btn btn-dark">Yeni Blog Ekle</a>
    <table class="table table-striped ">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Başlık</th>
                <th scope="col">Kategori</th>
                <th scope="col">Resim URL</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.BlogId</th>
                    <td>@item.Baslik</td>
                    <td>@item.Kategori</td>
                    <td><img src="@item.ResimURL" width="100" height="100" /></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BlogId">Düzenle</a> |
                        <a asp-action="Delete" asp-route-id="@item.BlogId">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>