@model WebProje.Models.Model.Blog

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Edit", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <main id="main" class="main">

        <div class="card-body">
            <h5 class="card-title">Blog Düzenle</h5>

            <!-- Browser Default Validation -->
            <form class="row g-3" asp-action="Edit" >
                <div class="col-md-4">
                    <label for="validationDefault01" class="form-label">Başlık</label>
                    <input type="text" class="form-control" id="Baslik" name="Baslik" value="@Model.Baslik" required>
                </div>
                <label for="validationDefault02" class="form-label">Önceki Resim</label>
                <div class="col-md-4">
                    <img src="@Model.ResimURL" height="150" width="150" />
                </div>
                <div class="col-md-4">
                    <label for="validationDefault02" class="form-label">Resim</label>
                    <input type="file" class="form-control" name="ResimURL" accept=".png,.jpg,.jpeg">
                </div>
                <label for="validationDefault03" class="form-label">Kategori</label>
                <div class="col-md-8">

                </div>
                <div class="col-md-8">
                    <label for="validationDefault03" class="form-label">İçerik</label>
                    <textarea name="Aciklama" class="ckeditor" required>@Model.Icerik</textarea>
                </div>
                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Kaydet</button>
                    <button class="btn btn-outline-secondary" type="button"><a href="/Blog/Index">İptal</a></button>
                </div>
            </form>
            <!-- End Browser Default Validation -->

        </div>
    </main>
}