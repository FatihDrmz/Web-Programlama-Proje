@model IEnumerable<WebProje.Models.Model.Hizmet>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main id="main" class="main">
    <h2>Hizmetler</h2>
    <hr />
    <a asp-action="Create" class="btn btn-dark">Yeni Hizmet Ekle</a>
    <table class="table table-striped table-bordered" >
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Başlık</th>
                <th scope="col">Açıklama</th>
                <th scope="col">Resim URL</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.HizmetId</th>
                <td>@item.Baslik</td>       
                <td>@Html.Raw(item.Aciklama)</td>
                <td><img src="@item.ResimURL" width="100" height="100" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.HizmetId">Düzenle</a> |
                    <a asp-action="Delete" asp-route-id="@item.HizmetId">Sil</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</main>