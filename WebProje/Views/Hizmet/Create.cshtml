
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<main id="main" class="main">

    <div class="card-body">
        <h5 class="card-title">Hizmet Ekle</h5>

        <!-- Browser Default Validation -->
        <form class="row g-3" enctype="multipart/form-data" asp-action="Create">
            <div class="col-md-4">
                <label for="validationDefault01" class="form-label">Başlık</label>
                <input type="text" class="form-control" id="Baslik" name="Baslik" required>
            </div>
            <div class="col-md-4">
                <label for="validationDefault02" class="form-label">Resim</label>
                <input type="file" class="form-control" name="ResimURL" accept=".png,.jpg,.jpeg" required>
            </div>
            <div class="col-md-8">
                <label for="validationDefault03" class="form-label">Açıklama</label>
                <textarea name="Aciklama" class="ckeditor" required></textarea>
            </div>
            <div class="col-12">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-outline-secondary" type="button"><a href="/Hizmet/Index">İptal</a></button>
            </div>
        </form>
        <!-- End Browser Default Validation -->

    </div>
</main>