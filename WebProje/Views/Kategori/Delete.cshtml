@model WebProje.Models.Model.Kategori

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main" class="main">
    <h2>Kategori Sil</h2>
    <hr />
    
    <h3>Kategoriyi silmek istediğinize emin misiniz?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.KategoriAd)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.KategoriAd)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Aciklama)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Aciklama)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="KategoriId" />
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            <a asp-action="Index">Geri Dön</a>
        </form>
    </div>
</main>