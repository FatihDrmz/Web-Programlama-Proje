@model WebProje.Models.Model.Hakkimizda

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

@using (Html.BeginForm("Edit", "Hakkimizda", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <main id="main" class="main">

        <h2>Hakkımızda Bilgilerini Güncelle</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="HakkimizdaId" />
                    <div class="form-group">
                        <label asp-for="Aciklama" class="control-label"></label>
                        <textarea name="Aciklama" class="ckeditor">@Model.Aciklama</textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Güncelle" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Geri Dön</a>
        </div>
</main>
}
