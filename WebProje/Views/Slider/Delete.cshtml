@model WebProje.Models.Model.Slider

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main" class="main">
    <h2>Slider Sil</h2>
    <hr />

    <h3>Sliderı silmek istediğinize emin misiniz?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Baslik)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Baslik)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Aciklama)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Aciklama)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ResimURL)
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.ResimURL" width="150" height="100" />
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="SliderId" />
            <input type="submit" value="Sil" class="btn btn-danger" /> |
            <a asp-action="Index">Geri Dön</a>
        </form>
    </div>
</main>