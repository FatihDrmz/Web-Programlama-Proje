@model IEnumerable<WebProje.Models.Model.Slider>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main" class="main">
    <h2>Slider</h2>
    <hr />
    <p>
        <a class="btn btn-primary"  asp-action="Create">Yeni Slider Ekle</a>
    </p>
    <table class="table table-striped ">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Baslik)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aciklama)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ResimURL)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aciklama)
                    </td>
                    <td>
                        <img src="@item.ResimURL" width="150" height="100"/>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SliderId">Düzenle</a> |
                        <a asp-action="Details" asp-route-id="@item.SliderId">Detay</a> |
                        <a asp-action="Delete" asp-route-id="@item.SliderId">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>